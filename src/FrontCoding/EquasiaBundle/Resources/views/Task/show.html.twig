{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Task</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Projectid</th>
                <td>{{ entity.projectId }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ entity.priority }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ entity.category }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Assignedto</th>
                <td>{{ entity.assignedTo }}</td>
            </tr>
            <tr>
                <th>Assignedby</th>
                <td>{{ entity.assignedBy }}</td>
            </tr>
            <tr>
                <th>Checkedby</th>
                <td>{{ entity.checkedBy }}</td>
            </tr>
            <tr>
                <th>Datetimestart</th>
                <td>{{ entity.datetimeStart|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Datetimeend</th>
                <td>{{ entity.datetimeEnd|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Datetimedeadline</th>
                <td>{{ entity.datetimeDeadline|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Espectedduration</th>
                <td>{{ entity.espectedDuration }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Moderator</th>
                <td>{{ entity.moderator }}</td>
            </tr>
            <tr>
                <th>Stamp</th>
                <td>{{ entity.stamp|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('task') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('task_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
